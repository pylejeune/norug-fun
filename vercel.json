{
  "version": 2,
  "builds": [
    {
      "src": "app/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/epoch-check",
      "dest": "/api/cron/epoch-check"
    }
  ],
  "env": {
    "RPC_ENDPOINT": "https://api.devnet.solana.com"
  },
  "crons": [
    {
      "path": "/api/cron/epoch-scheduler?auth_token=${API_SECRET_KEY}",
      "schedule": "0 0 * * *"
    }
  ]
}